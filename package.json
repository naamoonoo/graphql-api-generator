{
  "name": "find_my_selfie",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand",
    "tsc": "tsc",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/apis/**/*.graphql",
    "types:server": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "types": "concurrently npm:types:*",
    "dev:server": "nodemon --exec ts-node src/index.ts -e ts,graphql",
    "dev": "NODE_ENV=development concurrently npm:dev:*",
    "postinstall": "npm run tsc",
    "prebuild": "rm -rf build",
    "build:server": "tsc",
    "build": "concurrently npm:build:*",
    "postbuild": "cp ./src/api/**/**/*.graphql ./build/api/",
    "start": "NODE_ENV=production node ./build/index.js"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testRegex": "\\.(test|spec)\\.((js|ts))$",
    "setupFilesAfterEnv": [
      "<rootDir>/src/utils/testUtils/setup.ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": "2500"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naamoonoo/find_my_selfie.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/naamoonoo/find_my_selfie/issues"
  },
  "homepage": "https://github.com/naamoonoo/find_my_selfie#readme",
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.4",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.0",
    "@types/passport": "^1.0.2",
    "@types/supertest": "^2.0.8",
    "babel-runtime": "^6.26.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "apollo-server": "^2.11.0",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gql-merge": "0.0.6",
    "graphql": "^14.6.0",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.7",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.6",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "pg": "^7.18.2",
    "subscriptions-transport-ws": "^0.9.16",
    "typeorm": "^0.2.24"
  }
}
